<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="7dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/llHeader"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="#2980b9">
        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/ivProjectResource"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/resource_proj"
            android:layout_gravity="right"
            android:background="@drawable/rounded_textview"
            android:elevation="8dp"
            android:layout_weight=".01"/>

            <ImageView
                android:id="@+id/ivProjectEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_proj"
                android:background="@drawable/rounded_textview"
                android:elevation="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_weight=".01"/>

            <ImageView
                android:id="@+id/ivProjectDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/delete_proj"
                android:background="@drawable/rounded_textview"
                android:elevation="8dp"
                android:layout_weight=".01"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDates"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llHeader"

            android:layout_marginTop="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

                <TextView
                    android:id="@+id/tvProjectStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="March 23, 1997"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

                <TextView
                    android:id="@+id/tvProjectEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="March 23, 3011"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInfos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDates"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

                <TextView
                    android:id="@+id/tvProjectPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="70%"
                    android:layout_gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

                <TextView
                    android:id="@+id/tvProjectWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="60 hours"
                    android:layout_gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

                <TextView
                    android:id="@+id/tvProjectDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="1 month"
                    android:layout_gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tvProjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsumlorem ipsum lorem ipsum lorem ipsum"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_below="@+id/llInfos"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>