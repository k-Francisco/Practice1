<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    card_view:cardElevation="7dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"/>

        <LinearLayout
            android:id="@+id/llDates"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProjectName">

            <TextView
                android:id="@+id/tvProjectStartDate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_textview"
                android:text="March 3, 2017"
                android:textColor="#FFFFFF"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvProjectEndDate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tvProjectStartDate"
                android:background="@drawable/rounded_textview"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Mar 3, 2017"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInfos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDates">

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/rounded_textview"
                android:text="53%" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/rounded_textview"
                android:text="50 hours" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/rounded_textview"
                android:text="1 day" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvProjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsumlorem ipsum lorem ipsum lorem ipsum"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_below="@+id/llInfos"/>

        <View
            android:id="@+id/project_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8"
            android:layout_below="@+id/tvProjectDescription"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/civProjectManager"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sample"
            android:scaleType="centerCrop"
            android:layout_below="@+id/project_divider"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>