<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/spevonavback"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">


  <ImageView
    android:id="@+id/civUserPic"
    android:layout_width="70dp"
    android:layout_height="70dp"
      android:scaleType="centerCrop"
    android:src="@drawable/sample"/>

    <TextView
        android:id="@+id/tvHeaderFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_toRightOf="@+id/civUserPic"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="Full Name"/>

    <TextView
        android:id="@+id/tvHeaderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_toRightOf="@+id/civUserPic"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:text="email@sharepointevolution.com"/>

</RelativeLayout>