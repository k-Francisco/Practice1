<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <refractored.controls.CircleImageView
        android:id="@+id/civHomePic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sample"/>

    <TextView
        android:id="@+id/homeNotificationCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/civHomePic"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"
        android:paddingBottom="4dp"
        android:text="NOTIFICATION CAPTION"/>

    <TextView
        android:id="@+id/homeNotificationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeNotificationCaption"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_toRightOf="@id/civHomePic"
        android:paddingLeft="8dp"
        android:text="10 hours"/>



</RelativeLayout>
